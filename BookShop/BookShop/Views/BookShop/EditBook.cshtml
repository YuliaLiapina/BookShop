@model BusinessLayer.ModelsDTO.BookDTO
@{
    ViewBag.Title = "EditBook";
}

<h2>Edit Book</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)

        @Html.EditorFor(model => model.Name)
    </div>
    <div class="form-group">
        <lable>
            Writer
        </lable>
        @for (int i = 0; i < Model.Writers.Count; i++)
        {
            <p>
                @Html.EditorFor(model => model.Writers[i].FirstName)
                @Html.LabelFor(model => model.Writers[i].FirstName)

                @Html.EditorFor(model => model.Writers[i].LastName)
                @Html.LabelFor(model => model.Writers[i].LastName)
            </p>
        }
    </div>
    <div>
        <lable>Category</lable>
        <p>
            @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList)
        </p>
    </div>
    <button type="submit">Save</button>
}




